<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--底部导航图标-->
    <LinearLayout
        android:id="@+id/home_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#f28f8f8f">

        <ImageView
            android:id="@+id/home_tab_me"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personwhite"/>
        <ImageView
            android:id="@+id/home_tab_teach"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exwhite"/>
        <ImageView
            android:id="@+id/home_tab_set"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settingwhite"/>
        </LinearLayout>

    <!--分割线-->
    <LinearLayout
        android:id="@+id/home_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff8f8f8f"
        android:layout_above="@+id/home_tab">
        </LinearLayout>

    <LinearLayout
        android:id="@+id/home_tab_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_line"></LinearLayout>

</RelativeLayout>